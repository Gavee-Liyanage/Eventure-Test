<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/select_image_source"
        android:textColor="@color/admin_text_primary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCamera"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:text="@string/camera"
        android:textColor="@color/admin_primary"
        app:icon="@drawable/baseline_camera_alt_24"
        app:iconTint="@color/admin_primary"
        app:strokeColor="@color/admin_primary" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGallery"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:text="@string/gallery"
        android:textColor="@color/admin_primary"
        app:icon="@drawable/baseline_insert_photo_24"
        app:iconTint="@color/admin_primary"
        app:strokeColor="@color/admin_primary" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/cancel"
        android:textColor="@color/admin_text_secondary" />

</LinearLayout>