<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    android:focusable="false"
    android:clickable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:rippleColor="@color/admin_primary_light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Event Thumbnail -->
        <ImageView
            android:id="@+id/EventImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/event_images"
            android:background="@drawable/shape_rounded"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/error_image" />

        <!-- Event Name -->
        <TextView
            android:id="@+id/EventName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="@color/admin_text_primary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/EventImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/chipCategory"
            tools:text="Summer Music Festival" />

        <!-- Category Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipCategory"
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:clickable="false"
            android:checkable="false"
            app:chipBackgroundColor="@color/category_musical"
            app:layout_constraintTop_toTopOf="@id/EventName"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Musical" />

        <!-- Event Location -->
        <TextView
            android:id="@+id/EventLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/admin_text_secondary"
            android:textSize="13sp"
            android:drawablePadding="6dp"
            app:drawableStartCompat="@drawable/baseline_location_on_24"
            app:drawableTint="#2196F3"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@id/EventImage"
            app:layout_constraintTop_toBottomOf="@id/EventName"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Colombo City Hall" />

        <!-- Event Date -->
        <TextView
            android:id="@+id/EventDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/admin_text_secondary"
            android:textSize="13sp"
            android:drawablePadding="6dp"
            app:drawableStartCompat="@drawable/baseline_calendar_month_24"
            app:drawableTint="#2196F3"
            app:layout_constraintStart_toEndOf="@id/EventImage"
            app:layout_constraintTop_toBottomOf="@id/EventLocation"
            tools:text="August 10, 2025 â€¢ 6:00 PM" />

        <!-- Event Status -->
        <TextView
            android:id="@+id/textViewEventStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Status"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/status_upcoming"
            app:layout_constraintTop_toBottomOf="@id/EventDate"
            app:layout_constraintStart_toStartOf="@id/EventDate"
            tools:text="Upcoming" />

        <!-- Participant Count -->
        <TextView
            android:id="@+id/textViewParticipantCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="0 participants"
            android:textSize="12sp"
            android:textColor="@color/admin_text_secondary"
            app:layout_constraintTop_toBottomOf="@id/textViewEventStatus"
            app:layout_constraintStart_toStartOf="@id/EventDate"
            tools:text="120 participants" />

        <!-- Edit Button -->

        <!-- Delete Button -->

        <!-- Status Dot -->

        <ImageButton
            android:id="@+id/buttonEdit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Edit"
            android:src="@drawable/baseline_edit_24"
            app:layout_constraintEnd_toStartOf="@id/btnMenu"
            app:layout_constraintBottom_toBottomOf="@id/textViewParticipantCount"
            app:tint="@color/admin_primary" />

        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete"
            android:src="@drawable/baseline_delete_24"
            app:layout_constraintEnd_toStartOf="@id/buttonEdit"
            app:layout_constraintBottom_toBottomOf="@id/textViewParticipantCount"
            app:tint="@color/admin_error" />


        <View
            android:id="@+id/viewCategoryIndicator"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:background="@color/category_default"
            tools:ignore="MissingConstraints" />


        <!-- Menu Button (3 dots) -->
        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="more_options"
            android:src="@drawable/baseline_more_vert_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/textViewParticipantCount"
            app:tint="@color/admin_text_primary" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
